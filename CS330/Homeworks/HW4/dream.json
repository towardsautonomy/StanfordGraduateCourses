{
    "environment": "vanilla",
    "exploration_agent": {
        "batch_size": 32,
        "buffer": {
            "max_buffer_size": 16000,
            "sequence_length": 50,
            "type": "sequential"
        },
        "learning_rate": 0.0001,
        "max_grad_norm": 10,
        "min_buffer_size": 8000,
        "policy": {
            "discount": 0.99,
            "embedder": {
                "embed_dim": 64,
                "experience_embedder": {
                    "action_embed_dim": 16,
                    "embed_dim": 64,
                    "state_embed_dim": 64
                },
                "type": "recurrent"
            },
            "epsilon_schedule": {
                "begin": 1.0,
                "end": 0.01,
                "total_steps": 250000
            },
            "test_epsilon": 0,
            "type": "recurrent"
        },
        "sync_target_freq": 5000,
        "type": "random",
        "update_freq": 4
    },
    "instruction_agent": {
        "batch_size": 32,
        "buffer": {
            "max_buffer_size": 100000,
            "type": "vanilla"
        },
        "learning_rate": 0.0001,
        "max_grad_norm": 10,
        "min_buffer_size": 500,
        "policy": {
            "discount": 0.99,
            "embedder": {
                "attention_query_dim": 64,
                "embed_dim": 64,
                "instruction_embedder": {
                    "embed_dim": 64
                },
                "obs_embedder": {
                    "embed_dim": 64
                },
                "trajectory_embedder": {
                    "penalty": 0.1,
                    "type": "ours"
                },
                "transition_embedder": {
                    "action_embed_dim": 32,
                    "embed_dim": 64,
                    "state_embed_dim": 64
                },
                "type": "instruction"
            },
            "epsilon_schedule": {
                "begin": 1.0,
                "end": 0.01,
                "total_steps": 250000
            },
            "test_epsilon": 0,
            "type": "vanilla"
        },
        "sync_target_freq": 5000,
        "type": "learned",
        "update_freq": 4
    }
}